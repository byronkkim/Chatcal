# OpenAI API Key - 여기에 API 키를 입력하세요
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth - 구글 클라우드 콘솔에서 발급받은 값을 입력하세요
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# 배포 URL 설정
# 로컬 개발: http://localhost:3002
# 배포: https://chatcal.vercel.app
REDIRECT_URI=https://chatcal.vercel.app/api/auth/callback
CLIENT_URL=https://chatcal.vercel.app

# Server Config
PORT=3002
NODE_ENV=production

# JWT (보안을 위해 변경하세요)
JWT_SECRET=replace_with_random_secure_string
SESSION_SECRET=replace_with_another_random_secure_string 